<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/_15sdp"
    android:paddingEnd="@dimen/_15sdp"
    tools:context=".ui.menu.settings.SettingsFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/settings"
        android:textColor="#000"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_activate_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/bg_white_round"
        android:drawablePadding="@dimen/_5sdp"
        android:padding="@dimen/_10sdp"
        android:text="@string/label_activate_deactivate"
        android:textColor="#000"
        android:textSize="@dimen/_15ssp"
        android:visibility="gone"
        app:drawableStartCompat="@drawable/ic_block_list"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/tv_blocking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/bg_white_round"
        android:drawablePadding="@dimen/_5sdp"
        android:padding="@dimen/_10sdp"
        android:text="@string/label_blocking"
        android:textColor="#000"
        android:textSize="@dimen/_15ssp"
        app:drawableStartCompat="@drawable/ic_partial_block"
        app:layout_constraintTop_toBottomOf="@+id/tv_activate_option" />

    <TextView
        android:id="@+id/tv_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/bg_white_round"
        android:drawablePadding="@dimen/_5sdp"
        android:padding="@dimen/_10sdp"
        android:text="@string/label_support"
        android:textColor="#000"
        android:textSize="@dimen/_15ssp"
        app:drawableStartCompat="@drawable/ic_helpline"
        app:layout_constraintTop_toBottomOf="@+id/tv_blocking" />

    <TextView
        android:id="@+id/tv_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/bg_white_round"
        android:drawablePadding="@dimen/_5sdp"
        android:padding="@dimen/_10sdp"
        android:text="@string/label_rate_5_stars"
        android:textColor="#000"
        android:textSize="@dimen/_15ssp"
        app:drawableStartCompat="@drawable/ic_star"
        app:layout_constraintTop_toBottomOf="@+id/tv_support" />

    <TextView
        android:id="@+id/tv_affiliate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/bg_white_round"
        android:drawablePadding="@dimen/_5sdp"
        android:padding="@dimen/_10sdp"
        android:text="@string/label_affiliate_program"
        android:textColor="#000"
        android:textSize="@dimen/_15ssp"
        app:drawableStartCompat="@drawable/ic_doller"
        app:layout_constraintTop_toBottomOf="@+id/tv_rate" />

</androidx.constraintlayout.widget.ConstraintLayout>